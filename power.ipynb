    "def power(base,exp):#function declaration \n",
    "    if(exp==0):\n",
    "        return 1\n",
    "    else:    \n",
    "        return (base*power(base,exp-1))\n",
    "    \n",
    "base=int(input(\"Enter the base number..\"))\n",
    "exp=int(input(\"Enter the exponential value..\"))\n",
    "print(\"Result:\",power(base,exp))#Calling the function\n"
   ]
