    "def root(n):\n",
    "    x=n\n",
    "    y=1\n",
    "    \n",
    "    e=0.001          # e difines the accuracy level\n",
    "    while(x-y>e):\n",
    "        x=(x+y)/2\n",
    "        y=n/x\n",
    "        \n",
    "    return x"
   ]
